<%- include('top.ejs') %>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Excluir</th>
      </tr>
  </thead>
  <tbody>
<% docs.forEach(function(categoria){ %>
  <tr>
    <td>
    <a href="/edit_categoria/<%= categoria._id %>">
      <%= categoria.nome %>
    </a>
  </td>
  <td>
    <a href="/delete_categoria/<%= categoria._id %>" class="btn btn-danger" 
      onclick="return confirm('Tem certeza que deseja excluir?');">
      X
    </a>
  </td>
  </tr>
<% }) %>
</tbody>
</table>
<nav aria-label="Paginação">
  <ul class="pagination">
    <%
      for(var i=1; i <= qtdPaginas; i++) {
        %>
          <li class="page-item"><a class="page-link" href="/<%= i %>"><%= i %></a></li>
    <% }%>
  </ul>
</nav>
  <hr />
  <a href="/create_categoria" class="btn btn-primary">Cadastrar nova categoria</a>
 <%- include('bottom.ejs') %>